<body>
  <!-- üéµ M√∫sica de fundo -->
  <audio id="bgMusic" src="NOME-DA-SUA-MUSICA.mp3" autoplay loop muted></audio>

  <script>
    const audio = document.getElementById('bgMusic');

    // Tenta tocar automaticamente ao carregar a p√°gina
    window.addEventListener('load', () => {
      audio.play().catch(() => {});
    });

    // Se o navegador bloquear o som, libera no primeiro clique
    window.addEventListener('click', () => {
      audio.muted = false;
      audio.play();
    });
  </script>
